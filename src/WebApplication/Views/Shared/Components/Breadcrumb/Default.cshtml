@model List<Breadcrumb>
<div class="col-sm-6">
    <ol class="breadcrumb float-sm-right">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        @foreach (var breadcrumb in Model)
        {
            if (Model.Last() == breadcrumb)
            {
                <li class="breadcrumb-item active">@breadcrumb.DisplayName</li>
            }
            else
            {
                <li class="breadcrumb-item"><a href="@breadcrumb.Url">@breadcrumb.DisplayName</a></li>
            }
        }
        
    </ol>
</div><!-- /.col -->